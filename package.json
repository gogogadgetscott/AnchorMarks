{
  "name": "anchormarks",
  "version": "1.0.0",
  "description": "A modern web-based bookmark manager with browser sync, API access, and AI-assisted development",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "NODE_ENV=development node server/index.js",
    "prod": "NODE_ENV=production node server/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "docker:build": "docker build -t anchormarks .",
    "docker:run": "docker run -d -p 3000:3000 -v anchormarks_data:/data --name anchormarks anchormarks",
    "docker:compose": "docker-compose up -d"
  },
  "keywords": [
    "bookmarks",
    "manager",
    "sync",
    "api",
    "flow-launcher"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^9.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^7.1.3"
  }
}
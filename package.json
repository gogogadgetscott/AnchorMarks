{
  "name": "anchormarks",
  "version": "1.0.0",
  "description": "A modern web-based bookmark manager with browser sync, API access, and AI-assisted development",
  "keywords": [
    "bookmarks",
    "manager",
    "sync",
    "api",
    "flow-launcher"
  ],
  "homepage": "https://github.com/gogogadgetscott/AnchorMarks#readme",
  "bugs": {
    "url": "https://github.com/gogogadgetscott/AnchorMarks/issues"
  },
  "license": "MIT",
  "author": "",
  "main": "server/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gogogadgetscott/AnchorMarks.git"
  },
  "scripts": {
    "dev": "NODE_ENV=development node server/index.js",
    "prod": "NODE_ENV=production node server/index.js",
    "start": "npm run dev",
    "stop": ". ./.env 2>/dev/null || true; PORT=$(printf '%s' \"${PORT:-3000}\" | tr -d '\\r'); PID=$(lsof -ti:$PORT 2>/dev/null); if [ -n \"$PID\" ]; then kill -9 $PID && echo \"Stopped process $PID on port $PORT\"; else echo \"No process found on port $PORT\"; fi",
    "restart": "npm run stop && npm run start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:debug": "jest --detectOpenHandles --runInBand --debug",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf node_modules coverage",
    "reinstall": "npm run clean && npm install",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:shell": "docker compose exec -it anchormarks /bin/sh",
    "help": "echo 'Available scripts:' && npm run --list"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.5.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "babel-jest": "^30.2.0",
    "jest": "^30.2.0",
    "supertest": "^7.1.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
{
  "name": "anchormarks",
  "version": "1.0.0",
  "description": "A modern web-based bookmark manager with browser sync, API access, and AI-assisted development",
  "keywords": [
    "bookmarks",
    "manager",
    "sync",
    "api",
    "flow-launcher"
  ],
  "homepage": "https://github.com/gogogadgetscott/AnchorMarks#readme",
  "bugs": {
    "url": "https://github.com/gogogadgetscott/AnchorMarks/issues"
  },
  "license": "MIT",
  "author": "",
  "main": "apps/server",
  "repository": {
    "type": "git",
    "url": "https://github.com/gogogadgetscott/AnchorMarks.git"
  },
  "workspaces": [
    "apps"
  ],
  "scripts": {
    "dev": "NODE_ENV=development node apps/server",
    "prod": "NODE_ENV=production node apps/server",
    "start": "npm run dev",
    "stop": ". ./apps/.env 2>/dev/null || true; PORT=$(printf '%s' \"${PORT:-3000}\" | tr -d '\\r'); PID=$(lsof -ti:$PORT 2>/dev/null); if [ -n \"$PID\" ]; then kill -9 $PID && echo \"Stopped process $PID on port $PORT\"; else echo \"No process found on port $PORT\"; fi",
    "restart": "npm run stop && npm run start",
    "test": "jest --config packages/jest.config.js",
    "test:watch": "jest --config packages/jest.config.js --watch",
    "test:debug": "jest --config packages/jest.config.js --detectOpenHandles --runInBand --debug",
    "test:coverage": "jest --config packages/jest.config.js --coverage",
    "lint": "eslint \"**/*.js\" --config packages/eslint.config.cjs --fix && prettier . --write",
    "lint-check": "eslint \"**/*.js\" --config packages/eslint.config.cjs && prettier . --check",
    "clean": "rm -rf node_modules coverage",
    "reinstall": "npm run clean && npm install",
    "docker:build": "docker compose -f packages/docker/docker-compose.yml build",
    "docker:up": "[ -f ./apps/.env ] && export PORT=$(grep -E '^PORT=' ./apps/.env | cut -d'=' -f2- | tr -d '\\r') || true && docker compose -f packages/docker/docker-compose.yml up -d",
    "docker:down": "docker compose -f packages/docker/docker-compose.yml down",
    "docker:logs": "docker compose -f packages/docker/docker-compose.yml logs -f",
    "docker:shell": "docker compose -f packages/docker/docker-compose.yml exec -it anchormarks /bin/sh",
    "deploy:install": "sudo bash packages/deploy/install.sh",
    "help": "echo 'Available scripts:' && npm run --list"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
